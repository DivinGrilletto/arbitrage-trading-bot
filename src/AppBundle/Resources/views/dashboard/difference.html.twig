{% for difference in differences %}
    <tr>
        <td style="border-right: 1px solid grey;">{{ difference.exchangeSellName |capitalize }}</td>
        <td style="border-right: 1px solid grey;">{{ difference.exchangeBuyName |capitalize }}</td>
        <td>
            {{ difference.ask | number_format(2, '.', ',') }}
        </td>
        <td style="border-right: 1px solid grey;">
            {{ difference.bid | number_format(2, '.', ',') }}
        </td>
        <td>
            {% if difference.difference >= thresholdUsd %}
                <span class="text-success" style="font-weight: bold;">{{ difference.difference | number_format(2, '.', ',') }}</span>
            {% else %}
                <span class="text-default" style="font-weight: bold;">{{ difference.difference | number_format(2, '.', ',') }}</span>
            {% endif %}
        </td>
        <td>
            <button data-difference-id="{{ difference.id }}" {{ status.running ? 'class="btn btn-default place-order-btn" disabled' : 'class="btn btn-success place-order-btn"' }} alt="Place order pair" title="Place order pair"><i class="fa fa-play"></i></button>
        </td>
    </tr>
{% endfor %}
